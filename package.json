{
  "name": "hrc-kitchen",
  "version": "1.0.0",
  "description": "HRC Kitchen - Lunch Ordering System for Huon Regional Care",
  "private": true,
  "workspaces": [
    "backend",
    "frontend-common",
    "frontend-public",
    "frontend-admin"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:public\" \"npm run dev:admin\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:public": "npm run dev --workspace=frontend-public",
    "dev:admin": "npm run dev --workspace=frontend-admin",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=backend",
    "build:public": "npm run build --workspace=frontend-public",
    "build:admin": "npm run build --workspace=frontend-admin",
    "start": "npm run start --workspace=backend",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:seed": "npm run db:seed --workspace=backend",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "shadcn": "^3.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

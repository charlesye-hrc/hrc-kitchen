# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/hrc_kitchen?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (SendGrid or SMTP)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=replace-with-sendgrid-api-key
EMAIL_FROM=cy_test1@huonregionalcare.com.au

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=aud

# CORS
CORS_ORIGIN=http://localhost:5173

# Application URLs
#FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# Phase 6: Application Separation
# Frontend Application URLs (for CORS and redirects)
PUBLIC_APP_URL=http://localhost:5173
ADMIN_APP_URL=http://localhost:5174
# Note: Email domain restrictions are configured in Admin UI System Config
# (stored in system_config table as 'restricted_role_domain')

# Production Example:
# PUBLIC_APP_URL=https://order.hrc-kitchen.com
# ADMIN_APP_URL=https://manage.hrc-kitchen.com

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cloudinary Image Upload
CLOUDINARY_CLOUD_NAME=replace-with-cloud-name
CLOUDINARY_API_KEY=replace-with-cloudinary-api-key
CLOUDINARY_API_SECRET=replace-with-cloudinary-api-secret

# required for guest token signing; can reuse JWT secret but better to set explicitly
GUEST_ORDER_TOKEN_SECRET=replace-with-guest-token-secret

# required for CAPTCHA verification (matching your Google reCAPTCHA v3/v2 keys)
RECAPTCHA_SECRET_KEY=replace-with-recaptcha-secret